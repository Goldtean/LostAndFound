!!!
%html
  %head
    %meta{:content => "text/html; charset=UTF-8", "http-equiv" => "Content-Type"}/
    %title Lostandfound
    = stylesheet_link_tag    'application', media: 'all'
    = javascript_include_tag 'application'
    = csrf_meta_tags
  %nav.navbar.navbar-default.navbar-fixed-top
    .container-fluid
      .navbar-header
        %button.navbar-toggle.collapsed{"aria-expanded" => "false", "data-target" => "#main-nav", "data-toggle" => "collapse", type: "button"}
          %span.sr-only Toggle navigation
          %span.icon-bar
          %span.icon-bar
          %span.icon-bar
        = link_to image_tag(''), losts_path, class: 'navbar-brand'
      .collapse.navbar-collapse#main-nav
        %ul.nav.navbar-nav
          %li.dropdown
            %a.dropdown-toggle{"data-target" => "#", "data-toggle" => "dropdown", :href => "#", :role => "button"}
              Product Categories
              %b.caret
            %ul.dropdown-menu{ :role => 'menu'}
              %li
                = link_to 'Lost', losts_path
                = link_to 'Found', founds_path
  %body{:onload => "sizeChange()"}
    .container
      .row
        .col-sm-12
          %p.notice.text-center= notice
          %p.alert.text-center= alert
    = yield