.container-fluid
.container
  .row
    .col-lg-12
      = form_for @found, html: { class: 'form-horizontal center', id: 'found-form' } do |f|
        %img.macrabz-admin.center-block{:alt => 'Macrabz Emporium', :src => '/assets/founditlogo.png'}
        .form-center
          - if flash[:error]
            #flash.error.text-center
              = flash[:error]
          .form-group
            = f.label :picture, 'Picture url:', class: 'col-md-4 col-lg-4 control-label'
            .col-md-6
              = f.text_field :picture, class: 'form-control'
          .form-group
            = f.label :title, 'Title:', class: 'col-md-4 col-lg-4 control-label'
            .col-md-6
              = f.text_field :title, class: 'form-control'
          .form-group
            = f.label :description, 'Description:', class: ' col-md-4 col-lg-4 control-label'
            .col-md-6
              = f.text_area :description, class: 'form-control'
          .form-group
            = f.label :location, 'Location:', class: ' col-md-4 col-lg-4 control-label'
            .col-md-6
              = f.text_field :location, class: 'form-control'
          .form-group
            = f.label :brand, 'Brand:', class: 'col-md-4 col-lg-4 control-label'
            .col-md-6
              = f.text_field :brand, class: 'form-control'
          .form-group
            = f.label :color, 'Colors:', class: 'col-lg-4 col-md-4 control-label'
            .col-md-6
              = f.text_field :color, class: 'form-control'
          .col-md-12.update-button
            = f.submit 'Add Found Item', class: 'btn btn-primary btn-lg center-block'